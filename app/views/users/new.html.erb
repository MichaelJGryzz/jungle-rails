<section class="users-new">

  <header class="page-header">
    <h1>Create Account</h1>
  </header>

  <%= form_with(model: @user, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, required: true, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, required: true, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, required: true, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, required: true, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, required: true, class: 'form-control' %>
    </div>
  
    <div class="actions">
      <%= form.submit 'Sign Up', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <small>
  Already have an account? <%= link_to ' Log in', new_session_path %>
  </small>

</section>
