<section class="admin-dashboard">

  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

  <div class="panel panel-dashboard-counts">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2" style="font-size: larger;">Database Counts</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Total Products</td>
          <td><strong><%= @productTotal %></strong></td>
        </tr>
        <tr>
          <td>Total Categories</td>
          <td><strong><%= @categoryTotal %></strong></td>
        </tr>
      </tbody>
    </table>
  </div>

  <%= link_to "See All Products", admin_products_path, class: 'btn btn-lg btn-primary' %>
  
</section>